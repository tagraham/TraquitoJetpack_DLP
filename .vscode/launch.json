{
    "version": "0.2.0",
    "configurations": [
        // https://github.com/Marus/cortex-debug/blob/master/debug_attributes.md
        // https://mcuoneclipse.com/2023/10/22/debug-probes-for-rp2040-with-vs-code/
        {
            "name": "Launch",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            // "armToolchainPath": "${env:PICO_TOOLCHAIN_PATH}",
            "armToolchainPath": "C:\\Program Files (x86)\\Arm GNU Toolchain arm-none-eabi\\12.2 mpacbti-rel1\\bin",
            "device": "RP2040_M0_0",
            "interface": "swd",
            "runToEntryPoint": "main",
            "postLaunchCommands": [
                "monitor semihosting enable",
                "monitor semihosting ioclient 3", // 1: telnet (port 2333); 2: gdb; 3: both telnet and gdbclient output
            ],
            "postRestartCommands": [],
            "postResetCommands": [],
            "rtos": "FreeRTOS",
            "svdFile": "${workspaceFolder}ext/picoinf/ext/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "rttConfig": {
                "enabled": false,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "showDevDebugOutput": "none",
        },
        {
            "name": "Attach",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            // "armToolchainPath": "${env:PICO_TOOLCHAIN_PATH}",
            "armToolchainPath": "C:\\Program Files (x86)\\Arm GNU Toolchain arm-none-eabi\\12.2 mpacbti-rel1\\bin",
            "device": "RP2040_M0_0",
            "interface": "swd",
            "postAttachCommands": [
                // "continue",
            ],
            "postRestartCommands": [],
            "postResetCommands": [],
            "rtos": "FreeRTOS",
            "svdFile": "${workspaceFolder}ext/picoinf/ext/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "rttConfig": {
                "enabled": false,
                "address": "auto",
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "showDevDebugOutput": "none",
        },
    ]
}
